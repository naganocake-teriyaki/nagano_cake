<div class="container" style="margin-bottom: 7vh"></br>
 <div class="col-9 ml-5">
   <h3><span class="px-3 ml-5" style="background-color:#EEEEEE">商品編集</span></h3>
 </div>
 <%= render 'layouts/errors', obj: @item %>
  <div class="row">
    <div class="offset-md-1 col-md-6 mx-auto">
      <%= form_with model:@item, url: admin_item_path, method: :patch, local:true do |f| %>
        <table class="table table-borderless mt-3" >
          <tbody>
            <tr>
              <td><%= f.label :商品画像 %></td>
              <td><%= f.file_field :image, class: 'form-control-file' %></td>
            </tr>
            <tr>
              <td><%= f.label :商品名 %></td>
              <td><%= f.text_field :name, class: 'form-control', placeholder: "商品名" %></td>
            </tr>
            <tr>
              <td><%= f.label :商品説明 %></td>
              <td><%= f.text_area :description, class: 'form-control', placeholder: "ここに説明文を記述します" %></td>
            </tr>
            <tr>
              <td><%= f.label :ジャンル %></td>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></td>
            </tr>
            <tr>
              <td><%= f.label :税抜価格 %></td>
              <td><%= f.text_field :price, class: 'form-control', include_blank: "1000" %></td>
            </tr>
            <tr>
              <td><%= f.label :販売ステータス %></td>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active_draft, '販売中' %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active_on_sale, '販売停止中' %>
              </td>
            </tr>
          </tbody>
        </table>
    <div class="row">
      <div class="mx-auto">
        <%= f.submit '　変更を保存  ', class: 'btn btn-lg btn-success' %>
      <% end %>
      </div>
    </div>
　　</div>
   </div>
 </div>
