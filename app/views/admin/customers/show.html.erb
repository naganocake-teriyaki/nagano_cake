<div class="container">
  <div class="row">
    <div class="col-md-8 my-5">
      <h4><strong class="px-8" style="background-color:silver"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</strong></h4>
    </div>
    <div class="col-10 mx-auto">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted == false %>
            <td><h5 class="text-success font-weight-bold">有効</h5></td>
          <% else %>
            <td><h5 class="font-weight-bold" style="color: gray">退会</h5></td>
          <% end %>
        </tr>
      </table>
      <tr>
        <td><%= link_to "　編集する　", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %></td>
        <td><%= link_to "　注文履歴一覧を見る　", admin_root_path, class: 'btn btn-primary' %></td>
      </tr>
    </div>
  </div>
</div>