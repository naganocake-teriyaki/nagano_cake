<div class="container">
  <div class="row">
    <div class="col-md-8 my-5">
      <h4><strong class="px-8" style="background-color:silver"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</strong></h4>
    </div>
    <div class="col-8 mx-auto">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch, local:true do |f| %>
      <%= render 'layouts/errors', obj: @customer %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, autofocus: true, class: "form-control" %></td>
              <td><%= f.text_field :first_name, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :kana_last_name, autofocus: true, class: "form-control" %></td>
              <td><%= f.text_field :kana_first_name, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :phone_number, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, :false %>
                <%= f.label :"有効" %>
                <%= f.radio_button :is_deleted, :true %>
                <%= f.label :"退会" %>
              </td>
            </tr>
          <td><%= f.submit "  変更を保存  ", class: 'btn btn-success' %></td>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>